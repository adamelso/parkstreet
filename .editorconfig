; top-most EditorConfig file
root = true

; PSR standards
[*.php]
indent_style = space
indent_size = 4
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
end_of_line = LF

[*.feature]
indent_style = space
indent_size = 4
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
end_of_line = LF

[*.yml]
indent_style = space
indent_size = 2
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
end_of_line = LF

[Makefile]
indent_style = tab

